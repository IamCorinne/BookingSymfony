{% extends 'admin/base.html.twig' %}

{% block title %}Gestion des commentaires{% endblock %}

{% block body %}
<div class="container-fluid my-5">
    <h1 class="my-5">Gestion des commentaires</h1>

    
        <table class="table">
            <thead>
                <th>Id</th>
                <th>date</th>
                <th>Auteur</th>
                <th>Commentaire</th>
                <th>Note</th>
                <th>Annonce</th>
                <th></th>
                <th></th>
            </thead>
            <tbody>
            {% for comment in pagination.data  %}
            <tr>
                <td>{{comment.id}}</td>
                <td>{{comment.createAt|date('d/m/Y H:i')}}</td>
                <td><img src="{{comment.author.avatar}}" alt="{{comment.author.fullName}}" class="avatar avatar-xs"/> {{comment.author.fullName}}</td>
                <td>{{comment.content}}</td>
                <td><span class="badge badge-warning">{{comment.ad.averageRatings| number_format(1,',',' ')}}</span></td>
                <td>{{comment.ad.title}}</td>
                <td><a href="{{path('admin_comment_edit',{'id':comment.id})}}" class="btn btn-warning btn-sm"><img src="https://img.icons8.com/material-two-tone/12/000000/ball-point-pen.png"/></a></td>
                <td><a href="{{path('admin_comment_delete',{'id':comment.id})}}" class="btn btn-danger btn-sm"><img src="https://img.icons8.com/plasticine/16/000000/trash--v1.png"/></a></a></td>
            </tr>
            {% endfor %}    
            </tbody>
        </table>

        {# La pagination #}
        {# avant le service display :{% include 'admin/inc/pagination.html.twig'with {'route':'admin_comments_list'}  %}#}
        {{ pagination.display() }}

    
</div>
{% endblock %}
