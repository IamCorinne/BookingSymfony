{% extends 'base.html.twig' %}

{% block title %}Page de Connexion{% endblock %}

{% block body %}
<div class="container mt-5">
<div class="row">
<div class="offset-md-3 col-md-6">
    <div class="jumbotron py-3 px3">

    <h1>Connectez vous</h1>

    {% if hasError %}
    <div class="alert alert-danger">Une erreur est survenue, l'identifiant ou le mdp est incorrect.</div>
    {% endif %}

        <form action="{{path("account_login")}}" method="post">

            <div class="form-group">
                <label for="email">Email</label>
                <input type="text" name="_username" id="email" class="form-control" placeholder="Adresse mail" required value="{{username}}"/>
            </div>
            <div class="form-group">
                <label for="password">Mot de passe</label>
                <input type="password" name="_password" id="password" class="form-control" placeholder="Mot de passe" required/>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Connexion</button>
            </div>

        </form>
    </div>
    </div>
</div>    
</div>
{% endblock %}
